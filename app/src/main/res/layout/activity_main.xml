<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/predictButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="202dp"
        android:text="Predict Calories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textedit"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/textedit"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="424dp"
        android:ems="10"
        android:hint="Enter Calories"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daysEditText" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="98dp"
        android:layout_height="53dp"
        android:layout_below="@id/predictButton"
        android:layout_marginStart="143dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="96dp"
        android:hint="Predicted Calories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/predictButton"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/currentWeightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textedit"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="30dp"
        android:hint="Current Weight"
        app:layout_constraintBottom_toTopOf="@+id/goalWeightEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/goalWeightEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currentWeightEditText"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:hint="Goal Weight"
        app:layout_constraintBottom_toTopOf="@+id/daysEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeightEditText" />

    <EditText
        android:id="@+id/daysEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goalWeightEditText"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:hint="Enter Days"
        app:layout_constraintBottom_toTopOf="@+id/textedit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalWeightEditText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="80dp"
        android:text="Submit Details"
        app:layout_constraintBottom_toTopOf="@+id/predictButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textedit" />

</androidx.constraintlayout.widget.ConstraintLayout>